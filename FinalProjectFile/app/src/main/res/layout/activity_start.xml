<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpic"
    android:padding="16dp"
    tools:context=".StartActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:backgroundTint="@color/design_default_color_background">

            <Button
                android:id="@+id/redeem_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:text="Redeem"
                android:fontFamily="@font/neuehaasunicaregular"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Trivias Quiz"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:fontFamily="@font/pompadourbold"/>


    <Button
        android:id="@+id/bt_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="50dp"
        android:text="Start Scanning"
        android:fontFamily="@font/neuehaasunicaregular"/>

    <TextView
        android:id="@+id/text_view_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_open"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="32dp"
        android:textAlignment="center"
        android:fontFamily="@font/headingpompadour"
        android:text="Points: 0"
        android:textColor="#F0F0F0"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/button_start_quiz"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_open"
        android:layout_marginTop="200dp"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:text="Start Quiz"
        android:fontFamily="@font/neuehaasunicaregular"/>

</RelativeLayout>